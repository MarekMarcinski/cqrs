<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001-create-complaints-table" author="your-name-or-id"> <comment>Create the complaints table to store user complaints</comment>

        <createTable tableName="complaints">
            <column name="id" type="BINARY(16)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="complaint_product_id" type="BINARY(16)">
                <constraints nullable="false"/>
            </column>
            <column name="reporter_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="contents" type="TEXT"> <constraints nullable="true"/> </column>
            <column name="creation_date" type="DATE">
                <constraints nullable="false"/> </column>
            <column name="country" type="VARCHAR(255)">
                <constraints nullable="true"/> </column>
            <column name="report_counter" type="INT">
                <constraints nullable="true"/> </column>
        </createTable>

        <addUniqueConstraint
                constraintName="uk_complaint_product_reporter"
                tableName="complaints"
                columnNames="complaint_product_id, reporter_name"/>

    </changeSet>

</databaseChangeLog>